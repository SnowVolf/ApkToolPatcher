        name="Base.Widget.Design.TabLayout"
        parent="android:Widget">
        <item name="tabMaxWidth">264dp</item>
        <item name="tabIndicatorColor">@color/accent_material_light</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?android:attr/windowBackground</item>
        <item name="tabTextAppearance">?android:attr/textAppearanceSmall</item>
        <item name="tabSelectedTextColor">?android:textColorSecondary</item>
    </style>
    <style
        name="Widget.Design.TabLayout"
        parent="Base.Widget.Design.TabLayout">
        <!--<item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>-->
